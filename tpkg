#!/bin/bash

# Tpkg: a simple shell-script package manager and a fork
# no automatic dependency resolution abilities
#     (kind of similar to Slackware's)
#
# Forked by Halal Noob

url="example.com"        # repository URL example
srctype="net"            # can be either "net" or "dir" (unused for now)
root="/home/richard/root"    # fake root directory. must be absolute path

cd "$root"        # change directory to relative root

# Check if the directory change was successful
if [ "$(pwd)" != "$root" ]; then
    echo "failed to change directory to root prefix"
    exit 1
fi

# Function to list files in a package
list_files() {
    if [ "$1" = "listfiles" ]; then
        if [ "$2" != "" ]; then
            # Package file listing operations to be added here
            # For example: cat "/path/to/package/directory/$2/$PKG_FILELIST"
        else
            echo "Please provide a package name to list its files."
        fi
    fi
}

# Function to remove a package
remove_package() {
    if [ "$1" = "remove" ]; then
        if [ "$2" != "" ]; then
            read -p "Are you sure you want to remove $2? [y/n]: " ans
            # Check if user input is either 'y' or 'n'
            if [ "$ans" = "y" ]; then
                # Removal operations to be added here
                # Necessary commands and operations will be added
            elif [ "$ans" = "n" ]; then
                echo "Removal cancelled for $2"
            else
                echo "Invalid input. Please enter 'y' or 'n'."
            fi
        else
            echo "Please specify a package to remove."
        fi
    fi
}

# Function to verify package existence
verify_package() {
    local pkgname="$1"

    if [ ! -f "/path/to/package/directory/$pkgname/$PKG_FILELIST" ]; then
        echo "$pkgname: No such package in the database."
        return 1
    fi

    # Checking package accuracy
}

# Install action
if [ "$1" = "install" ]; then
    if [ "$2" = "" ]; then
        echo "You need to specify a package to install."
        exit 1
    elif [ -d "usr/tdb/$2" ]; then
        echo "$2 is already installed."
        exit 1
    fi

    busybox wget -cq "$url/$2.tar"    # get package from URL

    # Check if the download was successful
    if [ "$?" = "0" ]; then
        tar -xf "$2.tar"
        rm "$2.tar"
        echo "Installation successful."

        # Log function: create a log file with installed.txt
        if [ ! -d "/home/$(whoami)/.tpkg/" ]; then
            mkdir -p "/home/$(whoami)/.tpkg/"
        fi

        if [ ! -f "/home/$(whoami)/.tpkg/installed.txt" ]; then
            touch "/home/$(whoami)/.tpkg/installed.txt"
        fi

        if [ ! -f "/home/$(whoami)/.tpkg/removed.txt" ]; then
            touch "/home/$(whoami)/.tpkg/removed.txt"
        fi

        echo "$2 installed at $(date)" >> "/home/$(whoami)/.tpkg/installed.txt"
    else
        echo "Installation failed."
        exit 1
    fi

# If no action is specified
elif [ "$1" = "" ]; then
    echo "No actions specified."
    exit 1
fi
